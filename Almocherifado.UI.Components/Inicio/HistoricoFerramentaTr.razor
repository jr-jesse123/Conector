@using  Entities

@code{
    [Parameter] public Ferramenta Ferramenta { get; set; } 
    [Parameter] public Alocacao Alocacao { get; set; } 


}


<td>
    @Ferramenta.Nome - @Ferramenta.Patrimonio
</td>
<td style="text-align: left;width: 300px;">
    @if (Alocacao.Responsavel is not null)
    {
        @Alocacao.Responsavel.Nome
    }

</td>

<td>
    
    @Alocacao.ContratoLocacao
</td>

<td>
    
    @Alocacao.DataAlocacao.ToShortDateString()
</td>


<td>
    @if (Alocacao.Devolucoes?.FirstOrDefault(d => d.Ferramenta == Ferramenta) is not null)
    {
        @Alocacao.Devolucoes.FirstOrDefault(d => d.Ferramenta == Ferramenta).Data.ToShortDateString();
    }

</td>