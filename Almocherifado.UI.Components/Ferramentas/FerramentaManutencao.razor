<div class="form-check form-switch">
    <input class="form-check-input" type="checkbox" @onchange="(args) => OnChange.InvokeAsync((bool)args.Value).Wait() " checked="@EmManutencao" id="flexSwitchCheckDefault">
    <label class="form-check-label" for="flexSwitchCheckDefault">Ferramenta Em Manutenção</label>
</div>

@code {
    [Parameter] public EventCallback<bool> OnChange { get; set; }
    [Parameter] public bool EmManutencao { get; set; }

}
