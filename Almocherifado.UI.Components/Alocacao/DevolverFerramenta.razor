@page "/AlocarFerramenta"
@using Entities
@inherits FormBase
@code{


}

<div class="container h-100 mt-5">
    <h2> <b> DEVOLVER FERRAMENTA</b></h2>

    <div class="row d-flex justify-content-between my-4 ">
        <FerramentaDisplay TextoBtnConfrimacao="Devolver Ferramenta"  OnFerramentaSelecionada="(fer) => FerramentasSelecionadas.Add(fer)">
            <MensagemFerramentaDisponível>
                <h4 class="text-danger fw-bold">Ferramenta No Estoque</h4>
            </MensagemFerramentaDisponível>
            <MensagemFerramentaInDisponível>


                <h4 class="text-sucess fw-bold">Ferramenta Alocada</h4>
                <p><b>Responsável:</b>@context.alocacao.Responsavel.Nome</p>
                <p><b>AlocadaEm:</b>@context.alocacao.DataAlocacao.ToShortDateString()</p>
                <button class="btn btn-outline-info w-75" @onclick="@(() => FerramentasSelecionadas.Add(@context.ferramenta))">"Devolver Ferramenta"</button>
            </MensagemFerramentaInDisponível>
        </FerramentaDisplay>

        <table class="table mb-5">
            <thead>
                <tr>
                    <th scope="col">PATRIMÔNIO</th>
                    <th scope="col">FERRAMENTA</th>
                    <th scope="col">MARCA</th>
                    <th scope="col">MODELO</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in FerramentasSelecionadas)
                {
                    <FerramentaAlocacaoTr Ferramenta="item"></FerramentaAlocacaoTr>
                }
            </tbody>
        </table>
        <EditForm class="@formClass" Model="alocacaoInput" @ref="form" OnSubmit="OnSubmit">
            <FluentValidationValidator></FluentValidationValidator>



            <div class="row">
                <div class="row w-100">
                    <div class="invalid-feedback w-100 text-center fs-5">
                        <ValidationMessage For="() => alocacaoInput.Ferramentas"></ValidationMessage>
                    </div>
                </div>

                <div class="row">
                    <div class="col-auto">
                        <label>Observacoes</label>
                        <textarea class="form-control" style="width:446px;height:113px"></textarea>
                    </div>
                    <div class="col-auto">
                        <label>Data Devolução</label>
                       <input type="date" class="form-control" />
                    </div>
                </div>


                <div class="d-flex justify-content-end mt-4">
                    <button type="button" @onclick="OnCancelClic" class="btn btn-outline-danger mx-4">Cancelar</button>
                    <button type="button" @onclick="OnSubmit" class="btn btn-primary">Salvar</button>
                </div>
            </div>
        </EditForm>
    </div>
</div>